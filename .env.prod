# Production environment variables for ServerEyeBot
# Copy this file to .env and fill in your values

# Telegram Bot Token (required) - REPLACE WITH YOUR TOKEN
TELEGRAM_TOKEN=8370032634:AAFhXrh7tfITzgM9dPMMdTK5Z8utiv1p82g

# Application settings
APP_NAME=ServerEyeBot
APP_VERSION=1.0.0
ENV=production
PORT=8080
DEBUG=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILENAME=app-prod.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=7
LOG_MAX_AGE=30
LOG_COMPRESS=true

# Telegram settings
TELEGRAM_PRIVATE_MODE=true
TELEGRAM_RATE_LIMIT_PER_SEC=30
TELEGRAM_RATE_LIMIT_BURST=10
TELEGRAM_MAX_CONNECTIONS=40

# Metrics
METRICS_ENABLED=true
METRICS_INTERVAL=30s
METRICS_EXPORT_ENABLED=true
METRICS_EXPORT_PORT=9090
METRICS_RETENTION=24h

# Monitoring
MONITORING_ENABLED=true
MONITORING_CHECK_INTERVAL=30s
MONITORING_ALERT_THRESHOLDS=cpu_temp=80.0,memory_usage=90.0,disk_usage=85.0

# Admin settings - REPLACE WITH YOUR USER ID
ADMIN_USER_ID=YOUR_ADMIN_USER_ID
ALLOWED_USER_IDS=

# Security (optional for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=servereye
# DB_USERNAME=servereye
# DB_PASSWORD=your_secure_password

# Redis (optional for future use)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# API settings
API_BASE_URL=https://api.servereye.dev
API_ENABLED=true
API_TIMEOUT=30s
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1s
